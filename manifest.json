{
    "manifest_version": 3,
    "name": "ArtAudio",
    "description": "Extensão que converte artigos no formato PDF para áudio, com o objetivo de auxiliar pessoas com deficiência visual no meio acadêmico.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "tts",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "assets/logo-artaudio.png"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
            "default": "Alt + A"
        }
      },
      "play-pause": {
        "suggested_key": {
          "default": "Alt + P"
        },
        "description": "Play or pause speech."
      },
      "increase-speed": {
        "suggested_key": {
          "default": "Alt + Up"
        },
        "description": "Increases speech speed."
      },
      "decrease-speed": {
        "suggested_key": {
          "default": "Alt + Down"
        },
        "description": "Decreases speech speed."
      }
    }
  }
